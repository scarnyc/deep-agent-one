# Environment Configuration
ENV=local  # local, dev, staging, prod
DEBUG=true

# GPT-5 Specific Configuration
OPENAI_API_KEY=your_openai_key_here
GPT5_MODEL_NAME=gpt-5
GPT5_DEFAULT_REASONING_EFFORT=medium  # minimal, low, medium, high
GPT5_DEFAULT_VERBOSITY=medium        # low, medium, high
GPT5_MAX_TOKENS=4096
GPT5_TEMPERATURE=0.7

# Reasoning System Configuration
ENABLE_DYNAMIC_REASONING=true
REASONING_MINIMAL_TIMEOUT=5          # seconds
REASONING_LOW_TIMEOUT=15
REASONING_MEDIUM_TIMEOUT=30
REASONING_HIGH_TIMEOUT=60
TRIGGER_PHRASES="think harder,deep dive,analyze carefully,be thorough"
COMPLEXITY_THRESHOLD_HIGH=0.8
COMPLEXITY_THRESHOLD_MEDIUM=0.5

# Token Conservation Settings
ENABLE_RESPONSE_CHAINING=true
MAX_CHAIN_LENGTH=3
ENABLE_CONTEXT_COMPRESSION=true

# Other AI Services
PERPLEXITY_API_KEY=your_perplexity_key_here

# Monitoring & Tracing
LANGSMITH_API_KEY=your_langsmith_key_here
LANGSMITH_PROJECT=deep-agent-agi
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_TRACING_V2=true

# Prompt Optimization
OPIK_API_KEY=your_opik_key_here
OPIK_WORKSPACE=your_workspace_here
OPIK_PROJECT=deep-agent-reasoning

# Database Configuration (Phase 1)
DATABASE_URL=postgresql://user:password@host:port/dbname
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_db_password
POSTGRES_DB=deep_agent_agi
ENABLE_PGVECTOR=true

# Checkpointer Configuration (LangGraph State Persistence)
CHECKPOINT_DB_PATH=data/checkpoints.db
CHECKPOINT_CLEANUP_DAYS=30

# Streaming Configuration (Agent Event Streaming)
# NOTE: WebSocket endpoint (/api/v1/ws) is excluded from HTTP timeout middleware (30s)
# to allow longer streaming operations. Agent streaming has its own timeout below.
# Include both LangGraph v1 and v2 event patterns for tool execution
STREAM_ALLOWED_EVENTS=on_chat_model_stream,on_tool_start,on_tool_end,on_tool_call_start,on_tool_call_end,on_chain_start,on_chain_end,on_llm_start,on_llm_end
# Increased timeout to support parallel tool execution + GPT-5 synthesis (3 minutes)
STREAM_TIMEOUT_SECONDS=180
# Per-tool execution timeout (currently not enforced by LangGraph)
TOOL_EXECUTION_TIMEOUT=90
# Web search tool timeout (applies to Perplexity MCP calls)
WEB_SEARCH_TIMEOUT=30
# Maximum tool calls per agent invocation (graceful limit - agent completes reasoning after Nth call)
MAX_TOOL_CALLS_PER_INVOCATION=10

# Redis Cache (Phase 2)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your_redis_password
CACHE_TTL=3600

# FastAPI Configuration
# Binds to all interfaces (0.0.0.0) for container compatibility
# Ensure proper firewall rules are in place for production deployments
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
API_VERSION=v1

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000
NEXT_PUBLIC_ENABLE_REASONING_UI=true

# MCP Server Configuration
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_BROWSERS_PATH=~/.cache/ms-playwright
MCP_PERPLEXITY_TIMEOUT=30
MCP_PLAYWRIGHT_TIMEOUT=60

# Security Configuration
SECRET_KEY=your_secret_key_here  # Generate with: openssl rand -hex 32
JWT_SECRET=your_jwt_secret_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600  # seconds
RATE_LIMIT_REASONING_HIGH=10  # special limit for high reasoning
RATE_LIMIT_REASONING_PERIOD=3600

# TheAuditor Security
AUDITOR_ENABLED=true
AUDITOR_AUTO_SCAN=false
AUDITOR_SCAN_ON_DEPLOY=true

# Logging Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json, standard
ENABLE_STRUCTURED_LOGGING=true
LOG_REASONING_DECISIONS=true

# Performance Configuration
MAX_CONCURRENT_REQUESTS=50
REQUEST_TIMEOUT=300  # seconds
REASONING_QUEUE_SIZE=10
ENABLE_ASYNC_PROCESSING=true

# Feature Flags
ENABLE_HITL=true
ENABLE_SUB_AGENTS=true
ENABLE_RESEARCH_MODE=false  # Phase 2
ENABLE_COST_TRACKING=true
ENABLE_MEMORY_SYSTEM=false  # Phase 1

# Development Tools
ENABLE_DEBUG_TOOLBAR=true
ENABLE_PROFILING=false
MOCK_EXTERNAL_APIS=false

# Replit Specific (when deployed)
REPL_SLUG=deep-agent-agi
REPL_OWNER=your_username
