# ==============================================================================
# LOCAL DEVELOPMENT ENVIRONMENT TEMPLATE
# ==============================================================================
#
# Copy this file to .env for local development:
#   $ cp .env.local.template .env
#
# Then fill in your API keys and adjust settings as needed.
#
# ==============================================================================

# Environment & Debug
ENV=local
DEBUG=true

# GPT Configuration
OPENAI_API_KEY=your_openai_key_here
GPT_MODEL_NAME=gpt-5
GPT_DEFAULT_REASONING_EFFORT=medium
GPT_DEFAULT_VERBOSITY=medium
GPT_MAX_TOKENS=4096

# Reasoning System
ENABLE_DYNAMIC_REASONING=true
REASONING_MINIMAL_TIMEOUT=5
REASONING_LOW_TIMEOUT=15
REASONING_MEDIUM_TIMEOUT=30
REASONING_HIGH_TIMEOUT=60
TRIGGER_PHRASES="think harder,deep dive,analyze carefully,be thorough"
COMPLEXITY_THRESHOLD_HIGH=0.8
COMPLEXITY_THRESHOLD_MEDIUM=0.5

# Token Conservation
ENABLE_RESPONSE_CHAINING=true
MAX_CHAIN_LENGTH=3
ENABLE_CONTEXT_COMPRESSION=true

# External AI Services
PERPLEXITY_API_KEY=your_perplexity_key_here

# Monitoring & Tracing
LANGSMITH_API_KEY=your_langsmith_key_here
LANGSMITH_PROJECT=deep-agent-agi
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_TRACING_V2=true

# Prompt Optimization (Phase 1)
OPIK_API_KEY=your_opik_key_here
OPIK_WORKSPACE=your_workspace_here
OPIK_PROJECT=deep-agent-reasoning

# Database (Phase 1 - unused in Phase 0)
DATABASE_URL=postgresql://user:password@localhost:5432/deep_agent_agi
POSTGRES_USER=dev_user
POSTGRES_PASSWORD=dev_password
POSTGRES_DB=deep_agent_agi
ENABLE_PGVECTOR=true

# Checkpointer
CHECKPOINT_DB_PATH=data/checkpoints.db
CHECKPOINT_CLEANUP_DAYS=7

# Streaming Configuration
STREAM_VERSION=v2
STREAM_ALLOWED_EVENTS=on_chat_model_stream,on_chat_model_end,on_tool_start,on_tool_end,on_tool_call_start,on_tool_call_end,on_chain_start,on_chain_end,on_llm_start,on_llm_end
STREAM_TIMEOUT_SECONDS=300  # 5 minutes (generous for debugging)
TOOL_EXECUTION_TIMEOUT=45
WEB_SEARCH_TIMEOUT=30
MAX_TOOL_CALLS_PER_INVOCATION=6

# WebSocket & Event Processing
HEARTBEAT_INTERVAL_SECONDS=5
EVENT_QUEUE_TIMEOUT_SECONDS=1.0
CHECKPOINT_GRACE_PERIOD_SECONDS=5.0

# Redis (Phase 2 - unused in Phase 0)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your_redis_password
CACHE_TTL=3600

# FastAPI Backend
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true  # Hot reload for development
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
API_VERSION=v1

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000
NEXT_PUBLIC_ENABLE_REASONING_UI=true

# MCP Servers
PLAYWRIGHT_HEADLESS=false  # Show browser for debugging
PLAYWRIGHT_BROWSERS_PATH=~/.cache/ms-playwright
MCP_PERPLEXITY_TIMEOUT=30
MCP_PLAYWRIGHT_TIMEOUT=60

# Security (generate with: openssl rand -hex 32)
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 24 hours for dev convenience
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600
RATE_LIMIT_REASONING_HIGH=10
RATE_LIMIT_REASONING_PERIOD=3600

# TheAuditor Security
AUDITOR_ENABLED=true
AUDITOR_AUTO_SCAN=false
AUDITOR_SCAN_ON_DEPLOY=true

# Logging
LOG_LEVEL=DEBUG  # Verbose logging for development
LOG_FORMAT=standard  # Human-readable logs
ENABLE_STRUCTURED_LOGGING=true
LOG_REASONING_DECISIONS=true

# Performance
MAX_CONCURRENT_REQUESTS=50
REQUEST_TIMEOUT=300
REASONING_QUEUE_SIZE=10
ENABLE_ASYNC_PROCESSING=true

# Feature Flags
ENABLE_HITL=true
ENABLE_SUB_AGENTS=true
ENABLE_RESEARCH_MODE=false
ENABLE_COST_TRACKING=true
ENABLE_MEMORY_SYSTEM=false

# Development Tools
ENABLE_DEBUG_TOOLBAR=true  # Enable for local dev
ENABLE_PROFILING=true  # Enable for performance debugging
MOCK_EXTERNAL_APIS=false  # Use real APIs in local dev

# Replit (optional)
REPL_SLUG=deep-agent-agi
REPL_OWNER=your_username
